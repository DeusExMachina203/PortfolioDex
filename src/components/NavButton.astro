---
export interface Props {
	href: string;
}
const { href } = Astro.props;
---

<a href={href}>
	<slot />
</a>

<style>
	a {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 10px 12px;
		border-radius: 999px;
		background: var(--bg-elev);
		border: 1px solid var(--border);
		text-decoration: none;
		color: var(--text);
		font-size: 14px;
	}
	a:hover {
		background: #ffffff;
		color: #000000;
	}
	a:focus-visible {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}
</style>
